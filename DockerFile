# 1. Базовый образ: используем Python 3.11 Slim
FROM python:3.11-slim

# 2. Установка системных зависимостей для Chrome/Headless-режима
# Устанавливаем gnupg, dirmngr и библиотеки, необходимые для устранения ошибки 127
RUN apt-get update && apt-get install -y \
    wget \
    gnupg \
    dirmngr \
    apt-transport-https \
    libnss3 \
    libgconf-2-4 \
    libasound2 \
    libfontconfig \
    libgbm1 \
    libatk-bridge2.0-0 \
    libgtk-3-0 \
    --no-install-recommends \
    && rm -rf /var/lib/apt/lists/*

# 3. Установка Google Chrome Stable (ИСПРАВЛЕННЫЙ ШАГ)
# Новый метод добавления ключа, который не использует устаревший 'apt-key'
RUN wget -q -O - https://dl.google.com/linux/linux_signing_key.pub | gpg --dearmor -o /etc/apt/trusted.gpg.d/google-archive.gpg \
    && echo "deb [arch=amd64 signed-by=/etc/apt/trusted.gpg.d/google-archive.gpg] http://dl.google.com/linux/chrome/deb/ stable main" > /etc/apt/sources.list.d/google-chrome.list \
    && apt-get update \
    && apt-get install -y google-chrome-stable

# 4. Создание рабочего каталога
WORKDIR /app

# 5. Установка Python-зависимостей (Ваши библиотеки)
# Устанавливаем все необходимые библиотеки в одном шаге
COPY requirements.txt /app/
RUN pip install --no-cache-dir -r requirements.txt

# 6. Определение переменных окружения для Selenium 
ENV CHROME_EXECUTABLE_PATH /usr/bin/google-chrome

# 7. Копирование основного кода Python (Предполагаем, что вы назвали его main.py)
COPY main.py /app/main.py

# 8. Команда, которая запустится при старте контейнера
CMD ["python", "main.py"]
