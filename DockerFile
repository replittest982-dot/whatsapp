# 1. Базовый образ: используем Python 3.11 Slim
FROM python:3.11-slim

# 2. Установка системных зависимостей для Chrome/Chromium
# Этот шаг устанавливает библиотеки, необходимые для запуска Chrome в Headless-режиме
RUN apt-get update && apt-get install -y \
    wget \
    gnupg \
    libnss3 \
    libgconf-2-4 \
    libasound2 \
    libfontconfig \
    libgbm1 \
    libatk-bridge2.0-0 \
    libgtk-3-0 \
    --no-install-recommends \
    && rm -rf /var/lib/apt/lists/*

# 3. Установка Google Chrome Stable
# Добавляем репозиторий Google и устанавливаем стабильную версию Chrome
RUN wget -q -O - https://dl-ssl.google.com/linux/linux_signing_key.pub | apt-key add - \
    && sh -c 'echo "deb [arch=amd64] http://dl.google.com/linux/chrome/deb/ stable main" >> /etc/apt/sources.list.d/google.list' \
    && apt-get update && apt-get install -y google-chrome-stable

# 4. Создание рабочего каталога
WORKDIR /app

# 5. Установка Python-зависимостей (Ваши библиотеки)
# В этом шаге мы добавляем сами библиотеки, которые Александр Волков спросил!
RUN pip install --no-cache-dir aiogram==3.10.0 selenium==4.23.0 webdriver-manager Pillow

# 6. Определение переменных окружения для Selenium 
ENV CHROME_EXECUTABLE_PATH /usr/bin/google-chrome

# 7. Копирование основного кода Python (Предполагаем, что вы назвали его main.py)
COPY main.py /app/main.py

# 8. Команда, которая запустится при старте контейнера
CMD ["python", "main.py"]
